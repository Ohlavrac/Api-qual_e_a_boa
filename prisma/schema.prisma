// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ComunClient {
  id                 Int      @id @default(autoincrement())
  name               String
  lastname           String
  email              String
  password           String
  age                Int
  perfil_image       String
  vaccination_status String
  city               String
  state              String
  createdAt          DateTime @default(now())
  type               Int      @default(0)
}

model CommercialClient {
  id                 Int     @id @default(autoincrement())
  establishment_name String
  owner_name         String
  email              String
  password           String
  perfil_image       String
  street             String
  number             String
  neighborhood       String
  city               String
  state              String
  type               Int     @default(1)
  Event              Event[]
}

model Event {
  id            Int              @id @default(autoincrement())
  title         String
  description   String
  date          DateTime
  image         String
  price         Float
  capacity      Int
  confirmations Int              @default(0)
  street        String
  number        String
  neighborhood  String
  city          String
  state         String
  active        Int              @default(1)
  id_owner      Int
  owner         CommercialClient @relation(fields: [id_owner], references: [id])
}
